{
  "ConfigFilePath": "",
  "DebugEnabled": false,
  "paths": {
    "onedrive_fullpath_root": "/Users/example/OneDrive",
    "notebook_vault_fullpath_root": "/Users/example/Documents/ObsidianVault",
    "notebook_vault_resources_basepath": "resources",
    "metadata_file": "config/metadata-schema.yaml",
    "onedrive_resources_basepath": "Education/Resources",
    "prompts_path": "prompts",
    "logging_dir": "logs"
  },
  "logging": {
    "max_file_size_mb": 50,
    "retained_file_count": 7
  },
  "microsoft_graph": {
    "client_id": "your-client-id",
    "api_endpoint": "https://graph.microsoft.com/v1.0",
    "authority": "https://login.microsoftonline.com/common",
    "scopes": [
      "https://graph.microsoft.com/Files.Read",
      "https://graph.microsoft.com/Sites.Read.All"
    ]
  },
  "aiservice": {
    "provider": "azure",
    "azure": {
      "endpoint": "https://your-resource.openai.azure.com/",
      "deployment": "gpt-4o",
      "model": "gpt-4o"
    },
    "openai": {
      "endpoint": "https://api.openai.com/v1",
      "model": "gpt-4o"
    },
    "foundry": {
      "endpoint": "https://your-foundry-endpoint",
      "model": "your-model"
    },
    "timeout": {
      "request_timeout_seconds": 300,
      "max_retry_attempts": 3,
      "base_retry_delay_seconds": 2,
      "max_retry_delay_seconds": 60,
      "max_chunk_parallelism": 3,
      "chunk_rate_limit_ms": 100,
      "max_file_parallelism": 2,
      "file_rate_limit_ms": 200
    }
  },
  "video_extensions": [
    ".mp4",
    ".avi",
    ".mov",
    ".wmv",
    ".flv",
    ".webm",
    ".mkv"
  ],
  "pdf_extensions": [
    ".pdf"
  ],
  "pdf_extract_images": false,
  "banners": {
    "enabled": true,
    "default": "gies-banner.png",
    "format": "image",
    "template_banners": {
      "main": "gies-banner.png",
      "program": "gies-banner.png",
      "course": "gies-banner.png"
    },
    "filename_patterns": {
      "*index*": "gies-banner.png",
      "*main*": "gies-banner.png"
    }
  }
}