{
  "aiservice": {
    "provider": "azure",
    "azure": {
      "endpoint": "https://your-resource.cognitiveservices.azure.com/",
      "deployment": "gpt-4o",
      "model": "gpt-4o"
    },
    "timeout": {
      "request_timeout_seconds": 300,
      "max_retry_attempts": 3,
      "base_retry_delay_seconds": 2,
      "max_retry_delay_seconds": 60,
      "max_chunk_parallelism": 3,
      "chunk_rate_limit_ms": 100
    }
  },
  "paths": {
    "input_dir": "C:\\path\\to\\your\\inputs",
    "output_dir": "C:\\path\\to\\your\\outputs",
    "metadata_file": "C:\\path\\to\\your\\metadata.yaml",
    "prompts_dir": "C:\\path\\to\\your\\prompts",
    "base_block_template": "C:\\path\\to\\BaseBlockTemplate.yaml"
  }
}
